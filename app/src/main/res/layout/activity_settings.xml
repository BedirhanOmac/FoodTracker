<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="settingsVM" type="com.bedirhansapplication.app.modules.settings.data.viewmodel.SettingsVM"/>
    </data>
    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearAndroidSmall"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <LinearLayout android:gravity="center_horizontal"
            android:id="@+id/linearColumnarrowleft"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar android:gravity="start"
                android:id="@+id/toolbarToolbar"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" app:contentInsetStart="0dp">
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearRowarrowleft"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal" style="@style/groupStyleblue_200">
                    <ImageView android:id="@+id/imageArrowleft"
                        android:layout_height="@dimen/_19pxh"
                        android:layout_marginBottom="@dimen/_21pxv"
                        android:layout_marginStart="@dimen/_20pxh"
                        android:layout_marginTop="@dimen/_19pxv"
                        android:layout_width="@dimen/_20pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_arrowleft"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_arrowleft"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtSettings"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_11pxv"
                        android:layout_marginEnd="@dimen/_162pxh"
                        android:layout_marginStart="@dimen/_121pxh"
                        android:layout_marginTop="@dimen/_18pxv"
                        android:layout_weight="0.81"
                        android:layout_width="0dp"
                        android:singleLine="true"
                        android:text="@{settingsVM.settingsModel.txtSettings}"
                        style="@style/txtPoppinssemibold20" tools:text="@string/lbl_settings"/>
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
            <LinearLayout android:id="@+id/linearRowremindproducts"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_24pxh"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_38pxv"
                android:layout_width="match_parent" android:orientation="horizontal">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtRemindproducts"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_marginTop="@dimen/_4pxv"
                    android:layout_weight="0.83"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@{settingsVM.settingsModel.txtRemindproducts}"
                    style="@style/txtPoppinsregular15" tools:text="@string/msg_remind_products"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchMaterialGroupThirtyNine"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_36pxh"
                    android:layout_weight="0.17" android:layout_width="0dp"/>
            </LinearLayout>
        </LinearLayout>
        <View android:background="@color/indigo_200"
            android:id="@+id/lineVector707"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_1pxv"
            android:layout_marginEnd="@dimen/_17pxh"
            android:layout_marginStart="@dimen/_17pxh"
            android:layout_marginTop="@dimen/_27pxv" android:layout_width="@dimen/_375pxh"/>
        <LinearLayout android:id="@+id/linearRownotifymeifa"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_17pxh"
            android:layout_marginStart="@dimen/_17pxh"
            android:layout_marginTop="@dimen/_17pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <TextView android:id="@+id/txtNotifymeifa"
                android:layout_height="wrap_content"
                android:layout_weight="0.8" android:layout_width="0dp"
                android:text="@{settingsVM.settingsModel.txtNotifymeifa}"
                style="@style/txtPoppinsregular15" tools:text="@string/msg_notify_me_if_a"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchMaterialGroupThirtyEight"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_12pxv"
                android:layout_marginStart="@dimen/_94pxh"
                android:layout_marginTop="@dimen/_7pxv"
                android:layout_weight="0.2" android:layout_width="0dp"/>
        </LinearLayout>
        <View android:background="@color/indigo_200"
            android:id="@+id/lineVector710"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_1pxv"
            android:layout_marginEnd="@dimen/_17pxh"
            android:layout_marginStart="@dimen/_17pxh"
            android:layout_marginTop="@dimen/_21pxv" android:layout_width="@dimen/_375pxh"/>
        <LinearLayout android:id="@+id/linearRowdiscardexpired"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_17pxh"
            android:layout_marginStart="@dimen/_17pxh"
            android:layout_marginTop="@dimen/_21pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <TextView android:id="@+id/txtDiscardexpired"
                android:layout_height="wrap_content"
                android:layout_weight="0.81" android:layout_width="0dp"
                android:text="@{settingsVM.settingsModel.txtDiscardexpired}"
                style="@style/txtPoppinsregular15" tools:text="@string/msg_discard_expired"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchMaterialGroupThirtySeven"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_12pxv"
                android:layout_marginStart="@dimen/_80pxh"
                android:layout_marginTop="@dimen/_7pxv"
                android:layout_weight="0.19" android:layout_width="0dp"/>
        </LinearLayout>
        <View android:background="@color/indigo_200"
            android:id="@+id/lineVector709"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_1pxv"
            android:layout_marginEnd="@dimen/_17pxh"
            android:layout_marginStart="@dimen/_17pxh"
            android:layout_marginTop="@dimen/_19pxv" android:layout_width="@dimen/_375pxh"/>
        <LinearLayout android:id="@+id/linearRowturnoffallse"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_17pxh"
            android:layout_marginStart="@dimen/_17pxh"
            android:layout_marginTop="@dimen/_26pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <TextView android:ellipsize="end"
                android:id="@+id/txtTurnoffallse"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1pxv"
                android:layout_marginTop="@dimen/_4pxv"
                android:layout_weight="0.73" android:layout_width="0dp"
                android:singleLine="true"
                android:text="@{settingsVM.settingsModel.txtTurnoffallse}"
                style="@style/txtPoppinsregular15" tools:text="@string/msg_turn_off_all_se"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchMaterialGroupThirtySix"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_165pxh"
                android:layout_weight="0.27" android:layout_width="0dp"/>
        </LinearLayout>
        <View android:background="@color/indigo_200"
            android:id="@+id/lineVector708"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_1pxv"
            android:layout_marginEnd="@dimen/_17pxh"
            android:layout_marginStart="@dimen/_17pxh"
            android:layout_marginTop="@dimen/_23pxv" android:layout_width="@dimen/_375pxh"/>
        <LinearLayout android:id="@+id/linearRowenableexpired"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_17pxh"
            android:layout_marginStart="@dimen/_17pxh"
            android:layout_marginTop="@dimen/_14pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <TextView android:ellipsize="end"
                android:id="@+id/txtEnableexpired"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6pxv"
                android:layout_weight="0.79" android:layout_width="0dp"
                android:singleLine="true"
                android:text="@{settingsVM.settingsModel.txtEnableexpired}"
                style="@style/txtPoppinsregular15" tools:text="@string/msg_enable_expired"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchMaterialGroupFortyOne"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2pxv"
                android:layout_marginStart="@dimen/_100pxh"
                android:layout_weight="0.21" android:layout_width="0dp"/>
        </LinearLayout>
        <View android:background="@color/indigo_200"
            android:id="@+id/lineVector711"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_1pxv"
            android:layout_marginEnd="@dimen/_17pxh"
            android:layout_marginStart="@dimen/_17pxh"
            android:layout_marginTop="@dimen/_19pxv" android:layout_width="@dimen/_375pxh"/>
        <LinearLayout android:id="@+id/linearRowgroupfortythree"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_304pxv"
            android:layout_marginEnd="@dimen/_17pxh"
            android:layout_marginStart="@dimen/_17pxh"
            android:layout_marginTop="@dimen/_14pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <TextView android:ellipsize="end"
                android:id="@+id/txtShowcheckboxes"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6pxv"
                android:layout_weight="0.82" android:layout_width="0dp"
                android:singleLine="true"
                android:text="@{settingsVM.settingsModel.txtShowcheckboxes}"
                style="@style/txtPoppinsregular15" tools:text="@string/msg_show_checkboxes"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchMaterialGroupFortyThree"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1pxv"
                android:layout_marginStart="@dimen/_57pxh"
                android:layout_weight="0.18" android:layout_width="0dp"/>
        </LinearLayout>
    </LinearLayout>
</layout>
