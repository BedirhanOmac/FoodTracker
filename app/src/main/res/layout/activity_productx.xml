<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- FrameLayout -->
    <FrameLayout
        android:id="@+id/frameAndroidSmall"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/groupStylewhite_A700">

        <!-- Linear Layout - Column Arrow Left -->
        <LinearLayout
            android:id="@+id/linearColumnarrowleft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_10pxv"
            android:orientation="vertical"
            android:layout_gravity="top|start">

            <!-- Toolbar -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                app:contentInsetStart="0dp">

                <!-- Linear Layout - Row Arrow Left -->
                <LinearLayout
                    android:id="@+id/linearRowarrowleft"
                    style="@style/groupStyleblue_200"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <!-- ImageView - Arrow Left -->
                    <ImageView
                        android:id="@+id/imageArrowleft"
                        android:layout_width="@dimen/_20pxh"
                        android:layout_height="@dimen/_19pxh"
                        android:layout_marginStart="@dimen/_20pxh"
                        android:layout_marginTop="@dimen/_19pxv"
                        android:layout_marginBottom="@dimen/_21pxv"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_arrowleft"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_arrowleft" />

                    <!-- TextView - Product X -->
                    <TextView
                        android:id="@+id/txtProductX"
                        style="@style/txtPoppinssemibold20"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_114pxh"
                        android:layout_marginTop="@dimen/_15pxv"
                        android:layout_marginEnd="@dimen/_154pxh"
                        android:layout_marginBottom="@dimen/_13pxv"
                        android:layout_weight="0.83"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@{productxVM.productxModel.txtProductX}"
                        tools:text="@string/lbl_product_x" />
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>

            <!-- Linear Layout - Ingredients -->
            <LinearLayout
                android:id="@+id/linearColumningredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_17pxh"
                android:layout_marginEnd="@dimen/_17pxh"
                android:layout_marginTop="@dimen/_49pxv"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                style="@style/groupStylebluegray_1">

                <!-- TextView - Ingredients -->
                <TextView
                    android:id="@+id/txtIngredients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_36pxh"
                    android:layout_marginEnd="@dimen/_36pxh"
                    android:layout_marginTop="@dimen/_16pxv"
                    android:singleLine="true"
                    android:text="@{productxVM.productxModel.txtIngredients}"
                    style="@style/txtPoppinssemibold17_1"
                    tools:text="@string/lbl_ingredients" />

                <!-- TextView - Ingredient Sample Rect -->
                <TextView
                    android:id="@+id/txtIngredientSampleRect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_36pxh"
                    android:layout_marginEnd="@dimen/_36pxh"
                    android:layout_marginTop="@dimen/_6pxv"
                    android:layout_marginBottom="@dimen/_24pxv"
                    android:text="@{productxVM.productxModel.txtIngredientSampleRect}"
                    style="@style/txtPoppinsregular19"
                    tools:text="@string/msg_ingredient1_ing" />
            </LinearLayout>

            <!-- Linear Layout - Row Resim 2023103 -->
            <LinearLayout
                android:id="@+id/linearRowresim2023103"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_17pxh"
                android:layout_marginEnd="@dimen/_17pxh"
                android:layout_marginTop="@dimen/_52pxv"
                android:orientation="horizontal"
                android:gravity="start"
                style="@style/groupStylebluegray_2">

                <!-- FrameLayout - Stack Resim 2023103 -->
                <FrameLayout
                    android:id="@+id/frameStackresim2023103"
                    android:layout_width="@dimen/_61pxh"
                    android:layout_height="@dimen/_52pxv"
                    android:layout_marginStart="@dimen/_12pxh"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:layout_marginBottom="@dimen/_10pxv">

                    <!-- ImageView - General Container Product X -->
                    <ImageView
                        android:id="@+id/imageGeneralContainerProductX"
                        android:layout_width="@dimen/_57pxh"
                        android:layout_height="@dimen/_52pxh"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_gravity="end"
                        android:scaleType="fitXY"
                        cornerRadius="@{@dimen/_6pxh}"
                        imageRes="@{@drawable/img_resim2023103_52x57}"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_resim2023103_52x57" />

                    <!-- ImageView - Torku Chocolate -->
                    <ImageView
                        android:id="@+id/imageTorkuChocolate"
                        android:layout_width="@dimen/_56pxh"
                        android:layout_height="@dimen/_52pxh"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:layout_gravity="start"
                        android:scaleType="fitXY"
                        cornerRadius="@{@dimen/_6pxh}"
                        imageRes="@{@drawable/img_resim2023103_52x56}"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_resim2023103_52x56" />
                </FrameLayout>

                <!-- Linear Layout - Column Sample Product -->
                <LinearLayout
                    android:id="@+id/linearColumnsampleproduct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_14pxh"
                    android:layout_marginEnd="@dimen/_15pxh"
                    android:layout_marginTop="@dimen/_12pxv"
                    android:layout_marginBottom="@dimen/_11pxv"
                    android:layout_weight="0.81"
                    android:orientation="vertical"
                    android:gravity="start">

                    <!-- TextView - Sample Product -->
                    <TextView
                        android:id="@+id/txtSampleproduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="@{productxVM.productxModel.txtSampleproduct}"
                        style="@style/txtPoppinssemibold17_1"
                        tools:text="@string/msg_sample_product" />

                    <!-- Linear Layout - Row Freshness -->
                    <LinearLayout
                        android:id="@+id/linearRowfreshness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- TextView - Freshness -->

                        <!-- ProgressBar - Group Five -->
                        <ProgressBar
                            android:id="@+id/progressBarGroupFive"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_11pxh"
                            android:layout_marginTop="@dimen/_7pxv"
                            android:layout_marginBottom="@dimen/_5pxv"
                            android:layout_weight="0.76"
                            android:indeterminate="false"
                            android:max="100"
                            android:minHeight="@dimen/_7pxv"
                            android:progress="34"
                            android:progressDrawable="@drawable/layer_list_bg_gray_50_border_red_500_radius_3_825" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Linear Layout - Row Purchased Date -->
            <LinearLayout
                android:id="@+id/linearRowpurchaseddate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_17pxh"
                android:layout_marginEnd="@dimen/_16pxh"
                android:layout_marginTop="@dimen/_76pxv"
                android:orientation="horizontal"
                android:gravity="start">

                <!-- Linear Layout - Column Purchased Date -->
                <LinearLayout
                    android:id="@+id/linearColumnpurchaseddate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    style="@style/groupStylebluegray_3">

                    <!-- TextView - Purchased Date -->
                    <TextView
                        android:id="@+id/txtPurchaseddate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_14pxh"
                        android:layout_marginEnd="@dimen/_14pxh"
                        android:layout_marginTop="@dimen/_13pxv"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="@{productxVM.productxModel.txtPurchaseddate}"
                        style="@style/txtPoppinssemibold19"
                        tools:text="@string/lbl_purchased_date" />

                    <!-- TextView - Date -->
                    <TextView
                        android:id="@+id/txtDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_14pxh"
                        android:layout_marginEnd="@dimen/_14pxh"
                        android:layout_marginTop="@dimen/_7pxv"
                        android:layout_marginBottom="@dimen/_11pxv"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="@{productxVM.productxModel.txtDate}"
                        style="@style/txtPoppinsregular19"
                        tools:text="@string/lbl_11_08_2023" />
                </LinearLayout>

                <!-- Linear Layout - Column Expiration Date -->
                <LinearLayout
                    android:id="@+id/linearColumnexpirationdate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    style="@style/groupStylebluegray_3">

                    <!-- TextView - Expiration Date -->
                    <TextView
                        android:id="@+id/txtExpirationdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_19pxh"
                        android:layout_marginEnd="@dimen/_19pxh"
                        android:layout_marginTop="@dimen/_15pxv"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="@{productxVM.productxModel.txtExpirationdate}"
                        style="@style/txtPoppinssemibold19"
                        tools:text="@string/lbl_expiration_date" />

                    <!-- TextView - Date One -->
                    <TextView
                        android:id="@+id/txtDateOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_19pxh"
                        android:layout_marginEnd="@dimen/_19pxh"
                        android:layout_marginTop="@dimen/_5pxv"
                        android:layout_marginBottom="@dimen/_11pxv"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="@{productxVM.productxModel.txtDateOne}"
                        style="@style/txtPoppinsregular19"
                        tools:text="@string/lbl_11_12_2023" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>